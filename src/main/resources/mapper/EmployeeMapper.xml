<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.metanet.persistence.EmployeeMapper">
	<update id="updateEmp" parameterType="com.metanet.domain.EmployeeVO">
		UPDATE EMPLOYEE
		<choose>
			<when test="dept.deptNo != null and pos.posNo != null">
				SET DEPT_NO = #{dept.deptNo},
				POS_NO = #{pos.posNo}
			</when>
			<when test="dept.deptNo != null and pos.posNo == null">
				SET DEPT_NO = #{dept.deptNo},
			</when>
			<when test="dept.deptNo == null and pos.posNo != null">
				SET POS_NO = #{pos.posNo}
			</when>
			<otherwise>
			</otherwise>
		</choose>
		WHERE EMP_NO = #{empNo}
	</update>
</mapper>